<% if current_user.thank_answers?(answer) %>
  <%= form_with(model: current_user.thanks.find_by(answer_id: answer.id), local: true, method: :delete) do |f| %>
    <%= hidden_field_tag :answer_id, answer.id %>
    <%= f.submit 'thank解除', class: 'btn btn-danger btn-sm' %>
  <% end %>
<% else %>
  <%= form_with(model: current_user.thanks.build, local: true) do |f| %>
    <%= hidden_field_tag :answer_id, answer.id %>
    <%= f.submit 'thank', class: 'btn btn-primary btn-sm' %>  
  <% end %>
<% end %>