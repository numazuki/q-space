<% if users.any?%>
  <div>
    <span class="shadow-sm p-3 bg-light rounded">ユーザー一覧</span>
  </div>
  <div class="row">
    <div class="col-sm-10 offset-sm-1">
      <ul>
        <% users.each do |user|%>
          <li class="media border mt-4 p-3">
            <img class="mr-2 rounded d-flex mr-3" src="<%= gravatar_url(user, { size: 50 }) %>" alt="">
            <div class="media-body">
              <h5><%= user.name%></h5>
              <div>
                <p><%=user.introduce %></p>
                <p><%= link_to 'プロフィールへ',user_path(user)%></p>
              </div>
            </div>
          </li>
        <%end%>
      </ul>
      <%=paginate users%>      
    </div>
  </div>
<%end%>
