<h2 class="text-center mt-5">みんなの質問</h2>

<ul>
  <% questions.each do |q|%>
    <li class="card mt-2">
      <div class="d-flex flex-row card-body">
        <div class="col-3 text-center">
          <img class="mr-2 rounded" src="<%= gravatar_url(q.user, { size: 50 }) %>" alt="">
          <p class="mt-3"><%=link_to q.user.name,user_path(q.user.id)%></p>
        </div>
        <div class="col-9">
          <h5><%=link_to q.title,question_path(q),class:"shadow-sm p-3 bg-light rounded stretched-link d-block"%></h5>
          <div class="mt-3 text-right">
            <p class="">回答数：<%=q.answers.count%></p>
          </div>
        </div>      
      </div>
    </li>
  <%end%>
  <%=paginate questions%>
</ul>