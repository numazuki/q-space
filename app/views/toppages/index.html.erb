<% if logged_in?%>
  <div>
    <div class="d-flex justify-content-around">
      <p><%=link_to 'あなたも質問してみよう!','questions/new',class:"btn btn-outline-primary font-weight-bold pl-4 pr-4"%></p>
      <p><%= link_to 'ユーザー一覧',users_path,class:"btn btn-outline-primary"%></p>
    </div>
    <%=render 'questions/questions',questions: @questions %>
  </div>
<%else%>
  <div class="center jumbotron">
    <div class="text-center">
      <h1>Welcome to the Q Space</h1>
    </div>
    
    <div class="text-center mt-4">
      <h1>Q Spaceをはじめよう！</h1>
      <h1><%=link_to'Signup!',signup_path%></h1>
    </div>
  </div>
<%end%>